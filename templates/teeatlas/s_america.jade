    //- s_america d3 map
    script
        var width = 600;
        var height = 600;

        var lon = 55.0;
        var lat = -28;

        var projection = d3.geo.albers()
            .center([0, lat])
            .rotate([lon, 0])
            .parallels([-12, -35])
            .scale(1500)
            .translate([width / 2, height / 2]);

        var path = d3.geo.path()
            .projection(projection);

        var svg = d3.select("#map").append("svg")
            .attr("width", width)
            .attr("height", height);

        d3.json("{{ url_for( 'static', filename='data/s_america.json') }}", function(error, s_america) {

        svg.selectAll(".s_america")
            .data(topojson.feature(s_america, s_america.objects.s_america).features)
            .enter().append("path")
            .attr("class", function(d) { return "s_america " + ((d.id).replace(/\s+/g, '')); })
            .attr("d", path)
            .on("mouseover", function(d) {
                d3.select("#s_americaState").text(d.id).style("opacity", "1");
            })
            .on("mouseout", function(d) {
                d3.select("#s_americaState").text("Region").style("opacity", "0.4")
            });

        var graticule = d3.geo.graticule()
            .step([5, 5]);  

        svg.append("path")
            .datum(graticule)
            .attr("d", path)
            .attr("class", "graticule line");
        });
        
